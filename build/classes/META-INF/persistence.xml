<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="MarketPlacePU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>Models.Invoicedetail</class>
    <class>Models.Invoice</class>
    <class>Models.Category</class>
    <class>Models.Clients</class>
    <class>Models.Warehouse</class>
    <class>Models.Users</class>
    <class>Models.Buydetail</class>
    <class>Models.Supplier</class>
    <class>Models.Buy</class>
    <class>Models.Employee</class>
    <class>Models.Location</class>
    <class>Models.Brand</class>
    <class>Models.Product</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/marketplace?zeroDateTimeBehavior=CONVERT_TO_NULL"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="alone2020"/>
    </properties>
  </persistence-unit>
</persistence>
